      return {
        data: null,
        error: { message: "Name is required", code: "NAME_REQUIRED" },
      }
    }
    return await repository.create(input)
  },
  async update(input) {
    return await repository.update(input)
  },
  async delete(id) {
    if (!id) {
      return {
        data: null,
        error: {
          message: "ID is required",
          code: "ID_REQUIRED",
        },
      }
    }
    return await repository.delete(id)
  },
})
```

